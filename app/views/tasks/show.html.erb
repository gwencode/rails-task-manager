<h1><%= @task.title %></h1>

<ul>
  <li>Details: <%= @task.details %></li>
  <li>Completed:
    <% if @task.completed %>
    <%= "Yes" %>
    <% else %>
    <%= "No" %>
    <% end %>
  </li>
</ul>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<br>
<br>
<%= link_to "Edit the task", edit_task_path %>
<br>
<br>
<%= link_to "My Tasks", tasks_path %>
